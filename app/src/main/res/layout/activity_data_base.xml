<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/gallery_thumb"
    android:backgroundTint="@color/colorT3"
    tools:context="com.wposs.appkequi.DataBaseActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:background="@drawable/figura_cuadrado"
        android:backgroundTint="#AFD6F1"
        android:fontFamily="@font/alice"
        android:text="@string/textViewTitle"
        android:textAlignment="center"
        android:textColor="@color/colorFrom"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorT3"
        android:onClick="goToBack"
        android:text="@string/buttonBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewBD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="50dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="@color/colorT6"
        android:fontFamily="@font/alice"
        android:text="@string/textViewBD"
        android:textColor="@color/colorFrom"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorT3"
        android:onClick="goToAdminSQLite"
        android:text="@string/buttonManagementBD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>